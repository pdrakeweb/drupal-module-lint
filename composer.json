{
    "name": "pdrakeweb/drupal-module-lint",
    "description": "Drupal module lint checking.",
    "version": "8.0.0",
    "authors": [
        {
            "name": "Peter Drake",
            "email": "pdrake@gmail.com",
            "role": "developer"
        }
    ],
    "bin": [
        "src/bin/dmlint"
    ],
    "require": {
        "php": ">=5.3",
        "drush/drush": "dev-master",
        "drupal/coder": "8.2.0-alpha1",
        "squizlabs/php_codesniffer": "2.0.x-dev",
        "pdepend/pdepend": "1.1.3",
        "phpmd/phpmd": "1.5.*",
        "sebastian/phpcpd": "1.4.*",
        "pdrakeweb/phpcs-security-audit": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "drush -y pm-download coder --destination=$HOME/.drush",
            "drush -y cache-clear drush"
        ]
    }
}
